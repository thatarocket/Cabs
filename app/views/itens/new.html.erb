<h1>Novo item</h1>

<% if @item.errors.any? %>
<div id="error_explanation">
    <h2>
    <%= @item.errors.count %> erro(s) impedem que o aluno seja salvo:
    </h2>
    <ul>
    <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

<%= form_with scope: :item, url: itens_path, local: true do |form| %>
  <p>
    <%= form.label :'Nome do produto' %><br>
    <%= form.text_field :nome %>
  </p>
 
  <!-- <p>
    <%= form.label :Fotos %><br>
    <%= form_with url: "/uploads", multipart: true do |form| %>
    <%= file_field_tag :picture %>
    <% end %>

  </p>
 -->
  <p>
    <%= form.label :Condição %><br>
    <%= form.select :condicao, ["","Novo", "Usado"] %>
  </p>

  <p>
    <%= form.label :Categoria %><br>
    <%= form.select :categoria, ["","Roupas", "Acessórios", "Sapatos", "Maquiagens","Objetos", "Outros"] %>
  </p>

  <p>
    <%= form.submit 'Anunciar' %>
  </p>
<% end %>