<h1>Login do usu√°rio</h1>

<% flash.each do |nome, mensagem| %>
  <%= content_tag :div, mensagem, class: nome %>
<% end %>

<% if @login.errors.any? %>
<div id="error_explanation">
    <h2>
    <%= @login.errors.count %> erro(s) impedem que o usuario seja salvo:
    </h2>
    <ul>
    <% @login.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

<%= form_with scope: :login, url: login_path, local: true do |form| %>

  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username, placeholder: "username" %>
  </p>
 
  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password, placeholder: "password" %>
  </p>

  <p>
    <%= form.submit 'Realizar login' %>
  </p>

  <p>
    <%= link_to 'Criar conta', new_usuario_path %>
  </p>

<% end %>